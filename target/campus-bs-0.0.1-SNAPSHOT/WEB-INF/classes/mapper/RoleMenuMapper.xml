<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yigang.dao.RoleMenuDao">

	<resultMap type="com.yigang.entity.RoleMenu" id="RoleMenu">
		<result property="menuId" column="menu_id" />
		<result property="roleId" column="role_id" />
	</resultMap>

	<select id="selMenusByRoleId" resultMap="RoleMenu">
		select * from role_menu
		where role_id = #{roleId}
	</select>
	
	<delete id="deleteMenusByRoleId">
		delete from role_menu
		where role_id = #{roleId}
	</delete>
	
	<delete id="deleteMenuByMenuId">
		delete from role_menu
		where menu_id = #{menuId}
	</delete>
	
	<insert id="insert" parameterType="com.yigang.entity.RoleMenu">
		insert into role_menu (menu_id, role_id)
    	values (#{menuId}, #{roleId})
	</insert>

	
</mapper>